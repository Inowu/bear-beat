# Copia a .env.local y rellena los valores.

# Entorno
# development = API local (localhost:5001) | production = API producción (thebearbeatapi.lat)
REACT_APP_ENVIRONMENT=development
REACT_APP_API_BASE_URL=
REACT_APP_TRPC_URL=
REACT_APP_SSE_URL=

# Sentry (monitoreo de errores en producción)
REACT_APP_SENTRY_DSN=
REACT_APP_SENTRY_FRONTEND_DSN=
REACT_APP_SENTRY_ENVIRONMENT=development
REACT_APP_SENTRY_RELEASE=
REACT_APP_SENTRY_DEBUG=0
REACT_APP_SENTRY_SAMPLE_RATE=1
REACT_APP_SENTRY_CAPTURE_DEV_ERRORS=0
REACT_APP_SENTRY_TRACES_SAMPLE_RATE=0
REACT_APP_SENTRY_REPLAY_SESSION_SAMPLE_RATE=0
REACT_APP_SENTRY_REPLAY_ON_ERROR_SAMPLE_RATE=0.1

# Meta / Facebook Pixel (no es secreto)
# Si lo dejas vacío, el frontend usa un fallback que coincide con public/index.html.
REACT_APP_FB_PIXEL_ID=
