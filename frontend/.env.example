# Copia a .env.local y rellena los valores.

# Entorno
# development = API local (localhost:5001) | production = API producción (thebearbeatapi.lat)
REACT_APP_ENVIRONMENT=development
REACT_APP_API_BASE_URL=
REACT_APP_TRPC_URL=
REACT_APP_SSE_URL=

# PayPal (client IDs; no son secretos)
REACT_APP_PAYPAL_CLIENT_ID=
REACT_APP_PAYPAL_CLIENT_TEST_ID=

# Stripe (publishable keys; no son secretos)
REACT_APP_STRIPE_KEY=
REACT_APP_STRIPE_TEST_KEY=

# Cloudflare Turnstile (site key; no es secreto)
REACT_APP_TURNSTILE_SITE_KEY=

# Sentry (monitoreo de errores en producción)
REACT_APP_SENTRY_DSN=
REACT_APP_SENTRY_FRONTEND_DSN=
REACT_APP_SENTRY_ENVIRONMENT=development
REACT_APP_SENTRY_RELEASE=
REACT_APP_SENTRY_DEBUG=0
REACT_APP_SENTRY_SAMPLE_RATE=1
REACT_APP_SENTRY_CAPTURE_DEV_ERRORS=0
REACT_APP_SENTRY_TRACES_SAMPLE_RATE=0
REACT_APP_SENTRY_REPLAY_SESSION_SAMPLE_RATE=0
REACT_APP_SENTRY_REPLAY_ON_ERROR_SAMPLE_RATE=0.1

# Meta / Facebook Pixel (no es secreto)
# Si lo dejas vacío, el frontend usa un fallback que coincide con public/index.html.
REACT_APP_FB_PIXEL_ID=

# Hotjar (heatmaps + session recordings)
# Solo se carga en builds de producción.
# Legacy Hotjar snippet:
# - requiere REACT_APP_HOTJAR_ID (numérico)
REACT_APP_HOTJAR_ID=
REACT_APP_HOTJAR_SNIPPET_VERSION=6
# 1/empty = enabled (cuando hay ID) | 0 = disabled
REACT_APP_HOTJAR_ENABLED=1
# 0 = solo pages de conversión | 1 = todas las rutas (excepto /admin)
REACT_APP_UX_TRACK_ALL=0

# Hotjar puede entregar un tag de Contentsquare (script como https://t.contentsquare.net/uxa/<TAG_ID>.js).
# Si se define, tiene prioridad sobre REACT_APP_HOTJAR_ID.
REACT_APP_CONTENTSQUARE_TAG_ID=
